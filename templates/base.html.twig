<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		<link
		rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
		<!-- Bootstrap CSS v5.2.1 -->
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
		<script src="https://kit.fontawesome.com/cce27d2628.js" crossorigin="anonymous"></script>
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		<header>
			{# <nav>
				<ul>
					<li>
						<a class="nav-link" href="{{ path('home') }}">NicePet</a>
					</li>
					<li class="center">
						<p>Espace Administration</p>
					</li>
					{% if  app.session.get('token') %}
						<li class="right">
							<a href="#">Se déconnecter</a>
						</li>
					{% else %}
						<li class="right nav-item">
							<a class="nav-link" href="{{ path('login') }}">Se connecter</a>
						</li>
						<li class="right nav-item">
							<a class="nav-link" href="{{ path('signup') }}">S'inscrire</a>
						</li>
					{% endif %}
				</ul>
			</nav> #}
		</header>


		<nav class="navbar navbar-expand-lg bg-body-tertiary">
			<div class="container-fluid">
				<a class="nav-link" href="{{ path('home') }}">Logo</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav">
						<li class="nav-item">
							<a class="nav-link active" aria-current="page" href="{{ path('croquette') }}">NicePet</a>
						</li>
						{% if app.session.get('token') %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('logout') }}">Se déconnecter</a>
							</li>
						{% else %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('login') }}">Se connecter</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('create_user') }}">Créer un utilisateur</a>
							</li>
						{% endif %}

					</ul>
				</div>
			</div>
		</nav>
		{% block body %}{% endblock %}

		<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js" integrity="sha384-fbbOQedDUMZZ5KreZpsbe1LCZPVmfTnH7ois6mU1QK+m14rQ1l2bGBq41eYeM/fS" crossorigin="anonymous"></script>
	</body>
</html>
