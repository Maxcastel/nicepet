{% extends 'base.html.twig' %}

{% block body %}
	<main id="page-create-user">

		<h1 class="text-center my-5">Créer un utilisateur</h1>

		<div class="container">
			<div class="row justify-content-md-center">
				<form class="" action="{{ path('create_user') }}" method="POST" style=" width: 507px;">

					{% if error %}
						<div class="alert alert-danger" role="alert">
							<text class="erreur">{{ messageError }}</text>
						</div>
					{% endif %}

					<div class="mb-3 col">
						<label for="staticEmail" class="col-sm-2 col-form-label" name="email">Email</label>
						<div class="">
							<input type="text" class="form-control" id="staticEmail" placeholder="Email de l'utilisateur" name="email">
						</div>
					</div>
					<div class="mb-3 col">
						<label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
						<div class="">
							<input type="text" class="form-control" id="inputPassword" placeholder="Mot de passe de l'utilisateur" name="password">
						</div>
					</div>

					<div class="form-group">
						<button type="submit" class="btn btn-success">Créer</button>
					</div>

				</form>
			</div>
		</div>
	</main>
{% endblock %}
